pipeline {
    agent none

    options {
        timestamps()
    }

    parameters{
        choice choices: ['Release', 'Debug'], description: '', name: 'BUILD_TYPE'
    }

    environment {
        PROJECT_NAME = "milvus"
        LOWER_BUILD_TYPE = params.BUILD_TYPE.toLowerCase()
        SEMVER = "${env.BRANCH_NAME}"
    }

    stages {
        stage("Ubuntu 16.04") {
            stages {
                stage("Run Build") {
                    agent {
                        kubernetes {
                            label 'build'
                            defaultContainer 'milvus-build-env'
                            yamlFile 'ci/pod_containers/milvus-build-env-pod.yaml'
                        }
                    }
                    stages {
                        stage('Build') {
                            steps {
                                sh 'echo "PROJECT_NAME: ${PROJECT_NAME}"'
                                sh 'echo "LOWER_BUILD_TYPE: ${LOWER_BUILD_TYPE}"'
                                sh 'echo "SEMVER: ${SEMVER}"'
                           }
                        }
                    }
                }

                stage("Publish docker and helm") {
                    agent {
                        kubernetes {
                            label 'publish'
                            defaultContainer 'publish-docker'
                            yamlFile 'ci/pod_containers/docker-pod.yaml'
                        }
                    }
                    stages {
                        stage('Publish Docker') {
                            steps {
                                sh 'echo "Publish Docker"'
                                sh("printenv")
                            }
                        }
                    }
                }
            }
        }
    }
}

